{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "LLVM_INSTALL_PREFIX": "C:/local/LLVM",
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "${sourceDir}/cmake/windows-llvm-toolchain.cmake",
          "type": "FILEPATH"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "${sourceDir}/cmake/homebrew-llvm-toolchain.cmake",
          "type": "FILEPATH"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-debug-linux",
      "displayName": "x64 Debug Linux",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release-linux",
      "displayName": "x64 Release Linux",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-debug-macos",
      "displayName": "x64 Debug macOS",
      "inherits": "macos-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release-macos",
      "displayName": "x64 Release macOS",
      "inherits": "macos-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "displayName": "Build Debug",
      "configurePreset": "x64-debug",
      "targets": [
        "all"
      ]
    },
    {
      "name": "build-release",
      "displayName": "Build Release",
      "configurePreset": "x64-release",
      "targets": [
        "all"
      ]
    },
    {
      "name": "build-debug-linux",
      "displayName": "Build Debug Linux",
      "configurePreset": "x64-debug-linux",
      "targets": [
        "all"
      ]
    },
    {
      "name": "build-release-linux",
      "displayName": "Build Release Linux",
      "configurePreset": "x64-release-linux",
      "targets": [
        "all"
      ]
    },
    {
      "name": "build-debug-macos",
      "displayName": "Build Debug macOS",
      "configurePreset": "x64-debug-macos",
      "targets": [
        "all"
      ]
    },
    {
      "name": "build-release-macos",
      "displayName": "Build Release macOS",
      "configurePreset": "x64-release-macos",
      "targets": [
        "all"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "unit-tests-windows",
      "displayName": "Unit Tests (Windows)",
      "configurePreset": "x64-debug",
      "environment": {
        "CTEST_OUTPUT_ON_FAILURE": "1"
      }
    },
    {
      "name": "unit-tests-linux",
      "displayName": "Unit Tests (Linux)",
      "configurePreset": "x64-debug-linux",
      "environment": {
        "CTEST_OUTPUT_ON_FAILURE": "1"
      }
    },
    {
      "name": "unit-tests-macos",
      "displayName": "Unit Tests (macOS)",
      "configurePreset": "x64-debug-macos",
      "environment": {
        "CTEST_OUTPUT_ON_FAILURE": "1"
      }
    }
  ]
}
